.SUFFIXES: .ps .pdf $(.SUFFIXES)

all: exam2.pdf rubric2.pdf

rubric2.dvi exam2.dvi:   2.tex

# A "make clean" shouldn't flush the pdfs & dvis. A "make superclean" removes
# *everything* that can be recreated.
clean:
	rm -f *~ \#*\# 
        # Only remove the stuff which was generated by a .tex file here.
	for t in *.tex; do \
	  b=`basename $$t .tex` ; \
          for e in log aux blg bbl oldlog nav out snm toc vrb ; do \
	    rm -f $$b.$$e ; done ; done

superclean: clean
	for t in *.tex; do \
	  b=`basename $$t .tex` ; \
          for e in pdf dvi ps ; do \
	    rm -f $$b.$$e ; done ; done

.tex.dvi:
	latex $<
	latex $<

.dvi.ps:
	dvips -Pcmz -o $@ $<

#.ps.pdf:
#	ps2pdf $< $@

.dvi.pdf:
	dvipdfm $<

